<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MapActivity">


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <TextView
        android:id="@+id/tv_pick"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_mb_edit_"
        android:gravity="center_vertical"
        android:text="Pickup location:"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="#707676"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_drop_off"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_pick"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_mb_edit_"
        android:gravity="center_vertical"
        android:text="Drop-off location:"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColorHint="#707676"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapView"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approx. Fare:$80"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Approx. travel time:40min"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tv_book_now"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/shape_mb_btn"
            android:gravity="center"
            android:text="Book Now"
            android:textColor="#737373" />

        <TextView
            android:id="@+id/tv_call_driver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/shape_mb_btn"
            android:gravity="center"
            android:text="Call Driver"
            android:textColor="#737373" />
    </LinearLayout>
</RelativeLayout>